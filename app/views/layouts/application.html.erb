<!DOCTYPE html>
<html>
<head>
  <title>RoadTrip Tracker</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= controller.controller_name %>">
<div id="banner">
    <%= image_tag("logo.png") %>
    <%= @page_title || "RoadTrip Tracker" %>
    <div id="login_info">
      <% if session[:user_id] %>
		    You are logged in as <%= session[:user_name] %> <%= link_to "[Log out]", logout_path %>
		  <% else %>
        You are not logged in <%= link_to "[Log in]", login_path  %>
      <% end %>
	   </div>
 </div>

  <div id="columns">
    <div id="side">
      <div id="scratch">
        <% if @scratch %>
         <!--  <%= hidden_div_if(@scratch.items.empty?, id: 'scratch') do %>
               <%= render @scratch %>
               <% end %> -->
        <% end %>
      </div>
      <ul>
        <li><%= link_to "Welcome", welcome_index_path %></li>
        <li><%= link_to "Trips", trips_path %></li>
        <li><%= link_to "Routes", routes_path %> </li>
        <li><%= link_to "Places", places_path %></li>
          <li><%= link_to "Way-Places", way_places_path %></li>
        <li><%= link_to "Activities", activities_path %> </li>
      </ul>
    </div>
    <div id="main">
        <% if notice %>
          <p id="notice"><%= notice %></p>
        <% end %>
        <%= yield %>
    </div>
  </div>
</body>
</html>
