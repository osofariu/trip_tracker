<h1>Listing places</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Name</th>
    <th>Notes</th>
    <th>Route</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @places.each do |place| %>
  <tr>
    <td><%= place.id %></td>
    <td><%= place.name %></td>
    <td><%= place.notes %></td>
    <td><%= place.route_id %></td>
    <td><%= link_to 'Show', place %></td>
    <td><%= link_to 'Edit', edit_place_path(place) %></td>
    <td><%= link_to 'Destroy', place, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

