  </div>
  <div class="field">
    <%= f.label :end_place %><br />
    <%= f.collection_select :end_place, Place.find(:all, order: "name"), :id, :name %>
  </div>
  <div class="field">
    <%= f.label :notes %><br />
    <%= f.text_area :notes %>
  </div>
  <div class="field">
    <%= f.label :distance %><br />
    <%= f.number_field :distance %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
