<% if @trips %>
  <% session[:redirect_to] = edit_trip_path(@trip) %>
<% end %>

<div id="trip_form">
  <%= form_for(@trip) do |f| %>
    <% if @trip.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@trip.errors.count, "error") %> prohibited this trip from being saved:</h2>

        <ul>
        <% @trip.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div id="form_left_group">
      <div class="field" id="form_name">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>
      <div id="form_start_date">
        Start Date
      </div>
      <div id="form_end_date">
        End Date
      </div>
      <div id="form_flexible">
        Flexibility
      </div>
    </div>
    <div class="field" id="form_description" >
      <%= f.label :description %><br />
      <%= f.text_area :description, rows: "10", cols: "80" %>
    </div>
    <div class="actions">
      <%= f.submit "Update Name and description" %>
    </div>
  <% end %>
</div>
    
  <% if @trip.id != nil %>
    <%= render 'edit_parts' %>
  <% end %>     